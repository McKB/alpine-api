            div(class='doc' id='get-chairlift-by-resort')
                include partials/getChairliftByResort.pug 
            div(class='doc' id='post-chairlift')
                include partials/postChairlift.pug
            div(class='doc' id='delete-chairlift')
                include partials/deleteChairlift.pug

        div(class='content' id='stats-content')
            div(class='doc' id='get-stats') 
                include partials/getStats.pug
            div(class='doc' id='get-stats-by-resort')
                include partials/getStatsByResort.pug 
            div(class='doc' id='post-stats')
                include partials/postStats.pug
            div(class='doc' id='put-stats')
